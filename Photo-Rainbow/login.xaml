<Window x:Class="Photo_Rainbow.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="login" Height="400" Width="600">
    <Grid TextElement.FontFamily="Tahoma" TextElement.FontSize="12">
        <Image HorizontalAlignment="Left" Height="370" VerticalAlignment="Top" Width="592" Source="pack://siteoforigin:,,,/Resources/background2.jpg" Stretch="UniformToFill">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Label Content="" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="user_auth_button" Content="Authenticate" HorizontalAlignment="Left" Margin="211,56,0,0" VerticalAlignment="Top" Width="160" Height="46" Click="Button_Click_1"/>
        <Button x:Name="complete_Verification_Button" Content="Complete Verification" HorizontalAlignment="Left" Margin="211,229,0,0" VerticalAlignment="Top" Width="160" Height="49" Click="complete_Verification_Button_Click"/>
        <TextBox x:Name="auth_Code_Box" HorizontalAlignment="Left" Height="42" Margin="211,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>

    </Grid>
</Window>
