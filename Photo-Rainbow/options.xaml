<Window x:Class="Photo_Rainbow.options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhotoRainbow" Height="400" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/background2.jpg" />
    </Window.Background>
    <Grid>       
        <TextBlock HorizontalAlignment="Left" Margin="10,59,0,0" TextWrapping="Wrap" Text="How do you like to see your images" VerticalAlignment="Top" Height="60" Width="572" FontSize="36" Foreground="#FFFFFEFE"/>
        <Button x:Name="Color_Sort_Button" Content="Sort Images By Color" HorizontalAlignment="Left" Margin="26,292,0,0" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.384,1.335" Height="49" Click="Color_Sort_Button_Click"/>
        <Button x:Name="Rainbow_Sort_Button" Content="Sort Images By Rainbow" HorizontalAlignment="Left" Margin="422,292,0,0" VerticalAlignment="Top" Width="135" Height="49" Click="Rainbow_Sort_Button_Click"/>

    </Grid>
</Window>
